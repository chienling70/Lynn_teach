<script>
    // åŸå§‹æˆèªè³‡æ–™ (é¡Œç›®: æ„æ€, ç­”æ¡ˆ: æˆèª)
    const rawData = [
        { idiom: "ä¸€è²§å¦‚æ´—", mean: "å½¢å®¹éå¸¸è²§çª®ï¼Œä¸€ç„¡æ‰€æœ‰ã€‚" },
        { idiom: "è³¢å¦»è‰¯æ¯", mean: "é€šæƒ…é”ç†ï¼Œèƒ½å…‹ç›¡å¦»è·èˆ‡æ¯è·çš„å¥³å­ã€‚" },
        { idiom: "ç¥æ©Ÿå¦™ç®—", mean: "å½¢å®¹è¨ˆç­–é«˜æ˜ã€é æ–™æº–ç¢ºã€‚" },
        { idiom: "å¤œä»¥ç¹¼æ—¥", mean: "å¤œæ™šæ¥è‘—ç™½å¤©ï¼Œä¸€ç›´ä¸æ­‡æ¯ã€‚å½¢å®¹å·¥ä½œå‹¤å¥®ã€‚" },
        { idiom: "åˆ»è‹¦è€å‹", mean: "å½¢å®¹å·¥ä½œå‹¤å¥®ï¼Œä¸æ€•è¾›è‹¦ã€‚" },
        { idiom: "æ¼¸å…¥ä½³å¢ƒ", mean: "æ¯”å–»å¢ƒæ³é€æ¼¸é€²å±•è‡³ç¾å¥½çš„å¢ƒç•Œã€‚" },
        { idiom: "é½’é °ç•™é¦™", mean: "å½¢å®¹é£Ÿç‰©å‘³é“é®®ç¾ï¼Œä»¤äººå›å‘³ç„¡çª®ã€‚" },
        { idiom: "é™½å¥‰é™°é•", mean: "è¡¨é¢éµå®ˆå¥‰è¡Œï¼Œå¯¦éš›ä¸Šå»é•åä¸ç…§è¾¦ã€‚" },
        { idiom: "å“€é´»éé‡", mean: "æ¯”å–»åˆ°è™•éƒ½æ˜¯å››è™•é›¢æ•£ã€å¤±å»å®¶åœ’çš„é›£æ°‘ã€‚" },
        { idiom: "è‡¥è–ªå˜—è†½", mean: "æ¯”å–»åˆ»è‹¦è‡ªå‹µï¼Œç™¼æ†¤åœ–å¼·ã€‚" },
        { idiom: "ç—›å®šæ€ç—›", mean: "æ¯”å–»å¸å–æ…˜ç—›æ•™è¨“ï¼Œè­¦æƒ•æœªä¾†ã€‚" },
        { idiom: "æ±Ÿéƒæ‰ç›¡", mean: "æ¯”å–»æ–‡æ€æ¯ç«­ï¼Œç„¡æ³•å†å‰µä½œå‡ºå¥½çš„ä½œå“ã€‚" },
        { idiom: "é›„å¿ƒè¬ä¸ˆ", mean: "æ¥µè¨€å¿—å‘çš„è±ªé‚ã€é å¤§ã€‚" },
        { idiom: "å“„å ‚å¤§ç¬‘", mean: "çœ¾äººåŒæ™‚å¤§ç¬‘ã€‚" },
        { idiom: "çœ¾æœ›æ‰€æ­¸", mean: "æ·±å¾—çœ¾äººæ“è­·ã€æ„›æˆ´ã€‚" },
        { idiom: "é˜®å›Šç¾æ¾€", mean: "å½¢å®¹éŒ¢è²¡çª˜ä¹ï¼Œç¶“æ¿Ÿå›°é›£ã€‚" },
        { idiom: "å·®å¼·äººæ„", mean: "æœ¬æŒ‡å°šå¯æŒ¯å¥®äººå¿ƒã€‚å¾Œç”¨ä»¥å½¢å®¹å¤§é«”ä¸Šå°šèƒ½ä»¤äººå‹‰å¼·æ»¿æ„ã€‚" },
        { idiom: "åˆå‡ºèŒ…å»¬", mean: "æ¯”å–»å‰›é€²å…¥ç¤¾æœƒï¼Œç¼ºä¹æ­·ç·´ã€‚" },
        { idiom: "ä¸Ÿä¸‰è½å››", mean: "å½¢å®¹äººå› ç‚ºé¦¬è™æˆ–å¥å¿˜ï¼Œä¸æ˜¯å¿˜äº†é€™å€‹ï¼Œå°±æ˜¯å¿˜äº†é‚£å€‹ã€‚" },
        { idiom: "ä½œè‚²è‹±æ‰", mean: "åŸ¹è‚²å„ªç§€çš„äººæ‰ã€‚" }
    ];

    let quizList = [];
    let currentQ = 0;
    let score = 0;
    let wrongAnswers = [];

    // åˆå§‹åŒ–
    window.onload = function() {
        initGrid();
        startQuiz();
    };

    function initGrid() {
        const grid = document.getElementById('pokemon-grid');
        grid.innerHTML = "";
        for(let i=0; i<20; i++) {
            let slot = document.createElement('div');
            slot.className = 'poke-slot';
            slot.id = 'slot-' + i;
            slot.innerText = (i + 1);
            grid.appendChild(slot);
        }
    }

    function startQuiz() {
        // æ´—ç‰Œç®—æ³•ï¼šæ‰“äº‚é¡Œç›®é †åº
        let shuffledData = [...rawData];
        for (let i = shuffledData.length - 1; i > 0; i--) {
            const j = Math.floor(Math.random() * (i + 1));
            [shuffledData[i], shuffledData[j]] = [shuffledData[j], shuffledData[i]];
        }
        
        // æº–å‚™é¡Œç›®èˆ‡é¸é …
        quizList = shuffledData.map(item => {
            // æ­£ç¢ºç­”æ¡ˆ
            let correct = item.idiom;
            
            // éš¨æ©ŸæŒ‘é¸ 3 å€‹éŒ¯èª¤é¸é …
            let distractors = rawData
                .filter(d => d.idiom !== correct) // æ’é™¤æ­£ç¢ºç­”æ¡ˆ
                .map(d => d.idiom)
                .sort(() => 0.5 - Math.random()) // æ‰“äº‚
                .slice(0, 3); // å–å‰3å€‹
            
            // åˆä½µé¸é …ä¸¦æ‰“äº‚
            let options = [correct, ...distractors].sort(() => 0.5 - Math.random());
            
            return {
                question: item.mean,
                answer: correct,
                options: options
            };
        });
        
        currentQ = 0;
        score = 0;
        wrongAnswers = [];
        loadQuestion();
    }

    function loadQuestion() {
        if(currentQ >= quizList.length) {
            endGame();
            return;
        }

        const qData = quizList[currentQ];
        
        // æ›´æ–°é€²åº¦æ¢
        document.getElementById('progress-fill').style.width = ((currentQ) / 20 * 100) + "%";

        // é¡¯ç¤ºé¡Œç›® (æ„æ€)
        document.getElementById('question-text').innerText = qData.question;

        // é¡¯ç¤ºé¸é … (æˆèª)
        const optsArea = document.getElementById('options-area');
        optsArea.innerHTML = "";
        
        qData.options.forEach(opt => {
            let btn = document.createElement('button');
            btn.className = 'option-btn';
            btn.innerText = opt;
            btn.onclick = () => checkAnswer(opt, qData);
            optsArea.appendChild(btn);
        });
    }

    function checkAnswer(selected, qData) {
        const slot = document.getElementById('slot-' + currentQ);
        
        if (selected === qData.answer) {
            // ç­”å°ï¼šç²å¾—å¯¶å¯å¤¢
            score++;
            // éš¨æ©Ÿç”¢ç”Ÿå¯¶å¯å¤¢ ID (1-150, é¿é–‹ç¥ç¸)
            let pokeID = Math.floor(Math.random() * 150) + 1;
            let img = document.createElement('img');
            img.src = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/${pokeID}.png`;
            slot.innerText = ""; // æ¸…é™¤æ•¸å­—
            slot.appendChild(img);
            
            // æ›´æ–°è¨ˆåˆ†æ¿
            document.getElementById('poke-count').innerText = score;
        } else {
            // ç­”éŒ¯ï¼šè©²æ ¼å­è®Šç‚ºå¤±æ•—ç‹€æ…‹
            slot.innerText = "";
            slot.classList.add('failed');
            
            // è¨˜éŒ„éŒ¯é¡Œ
            wrongAnswers.push({
                question: qData.question,
                correct: qData.answer,
                wrong: selected
            });
        }
        
        currentQ++;
        loadQuestion();
    }

    function endGame() {
        document.getElementById('quiz-card').style.display = 'none';
        document.getElementById('result-screen').style.display = 'block';
        document.getElementById('final-score').innerText = score;
        document.getElementById('progress-fill').style.width = "100%";

        // å®Œç¾éé—œåˆ¤å®š (20åˆ†)
        if (score === 20) {
            document.getElementById('legendary-reward').style.display = 'block';
            document.getElementById('final-title').innerText = "ğŸ‰ å®Œç¾é€šé—œï¼ ğŸ‰";
            launchConfetti();
        } else {
            document.getElementById('final-title').innerText = "æŒ‘æˆ°çµæŸï¼";
            // é¡¯ç¤ºéŒ¯é¡ŒæŒ‰éˆ•
            if(wrongAnswers.length > 0) {
                document.getElementById('review-btn').style.display = 'inline-block';
                renderWrongAnswers();
            }
        }
    }

    function renderWrongAnswers() {
        const area = document.getElementById('review-area');
        area.innerHTML = "<h3>âŒ éŒ¯é¡Œæª¢è¨</h3>";
        wrongAnswers.forEach(item => {
            let div = document.createElement('div');
            div.className = 'review-item';
            div.innerHTML = `
                <div style="font-size:16px; color:#555; margin-bottom:5px;">é¡Œç›®ï¼š${item.question}</div>
                <span class="review-wrong">ä½ é¸äº†ï¼š${item.wrong}</span>
                <span class="review-correct">æ­£è§£ï¼š${item.correct}</span>
            `;
            area.appendChild(div);
        });
    }

    function toggleReview() {
        const area = document.getElementById('review-area');
        if(area.style.display === 'block') {
            area.style.display = 'none';
        } else {
            area.style.display = 'block';
        }
    }

    function launchConfetti() {
        var duration = 3 * 1000;
        var animationEnd = Date.now() + duration;
        var defaults = { startVelocity: 30, spread: 360, ticks: 60, zIndex: 0 };

        function random(min, max) {
            return Math.random() * (max - min) + min;
        }

        var interval = setInterval(function() {
            var timeLeft = animationEnd - Date.now();

            if (timeLeft <= 0) {
                return clearInterval(interval);
            }

            var particleCount = 50 * (timeLeft / duration);
            confetti(Object.assign({}, defaults, { particleCount, origin: { x: random(0.1, 0.3), y: Math.random() - 0.2 } }));
            confetti(Object.assign({}, defaults, { particleCount, origin: { x: random(0.7, 0.9), y: Math.random() - 0.2 } }));
        }, 250);
    }
</script>

